{
    "manifest_version": 3,
    "name": "ClickbaitBuster",
    "version": "1.0",
    "description": "Replaces news headlines and summaries on news.com.au with informative, non-clickbait versions.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "alarms"
    ],
    "host_permissions": [
        "https://www.news.com.au/*",
        "https://generativelanguage.googleapis.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.news.com.au/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    }
}
